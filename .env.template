# Shadow AI Agent Configuration
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for GPT-4)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Ollama URL (if using local LLM)
OLLAMA_URL=http://localhost:11434

# Email credentials (for email automation)
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_app_password_here

# Additional API keys as needed
FLIPKART_API_KEY=your_flipkart_api_key_here
NAUKRI_API_KEY=your_naukri_api_key_here

# Flask Web Interface Security
FLASK_SECRET_KEY=your-secret-key-here-change-in-production
