# Shadow AI Environment Configuration
# This file contains environment variables for Shadow AI
# NEVER commit this file to version control!

# AI Provider Configuration
DEFAULT_LLM_PROVIDER=gemini

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=your_openai_key_here
GEMINI_API_KEY=your_gemini_key_here
OLLAMA_URL=http://localhost:11434

# Email Configuration
EMAIL_ADDRESS=your_email@example.com
EMAIL_PASSWORD=your_app_password

# Web Interface
FLASK_SECRET_KEY=change-this-in-production-use-random-string

# Additional API Keys
FLIPKART_API_KEY=your_flipkart_key_here
NAUKRI_API_KEY=your_naukri_key_here

# Safety Settings
REQUIRE_CONFIRMATION=true
CONFIRMATION_TIMEOUT=30

# Voice Settings
VOICE_ENABLED=true
VOICE_LANGUAGE=en-US

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/shadow.log

# Development
DEBUG_MODE=false
